{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "assignees": [
    "notandy"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["github.com/getsentry/sentry-go"],
      "enabled": false
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
